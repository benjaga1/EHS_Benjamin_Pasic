<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EHS_Benjamin_Pasic</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EHS_Benjamin_Pasic.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom mb-4">
            <div class="container">
                <a class="navbar-brand fw-bold" href="/">EHS News</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="navMenu" class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/News") ? "active" : "")" href="/News">
                                News
                            </a>
                        </li>
                        <li class="nav-item" style="@(User.Identity.IsAuthenticated ? "" : "display:none;")">
                            <a class="nav-link @(Context.Request.Path.StartsWithSegments("/SavedNews") ? "active" : "")" href="/SavedNews">
                                Saved
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Logout">Logout (@User.Identity.Name)</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link @(Context.Request.Path.StartsWithSegments("/Account/Login") ? "active" : "")"  href="/Account/Login">
                                    Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-white py-0" style="background: linear-gradient(135deg, #8e63ff, #b388ff);">
        <div class="container d-flex justify-content-between align-items-center">
            <span>&copy; 2025 - Benjamin Pasic</span>
            <a href="https://www.linkedin.com/in/benjamin-pa%C5%A1i%C4%87-92352383/" target="_blank" class="text-white" style="font-size: 1.2rem;">
                <i class="bi bi-linkedin"></i> LinkedIn
            </a>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <div id="toastContainer" class="toast-container position-fixed bottom-0 end-0 p-3"></div>

    <script>
        function showToast(message, type = "success") {
            var bg = type === "success" ? "bg-success" : "bg-danger";

            var toast = $(`
                <div class="toast align-items-center text-white ${bg} border-0" role="alert" aria-live="assertive">
                    <div class="d-flex">
                        <div class="toast-body">${message}</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            `);

            $("#toastContainer").append(toast);
            var bsToast = new bootstrap.Toast(toast[0], { delay: 2500 });
            bsToast.show();
        }
    </script>

    <div class="modal fade" id="deleteConfirmModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content elegant-modal">

                <div class="modal-header border-0 pb-0">
                    <h5 class="modal-title">Remove Article</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body pt-2">
                    <p class="modal-text">
                        Are you sure you want to remove this article?
                        This action cannot be undone.
                    </p>
                </div>

                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" id="confirmDeleteBtn" class="btn btn-danger rounded-pill px-4">
                        Remove
                    </button>
                </div>

            </div>
        </div>
    </div>


</body>
</html>
