@page "{articleId}"
@model EHS_Benjamin_Pasic.Pages.News.DetailsModel
@{
    ViewData["Title"] = Model.News?.Title ?? "News Details";
}

@if (Model.News == null)
{
    <div class="alert alert-danger mt-4">Article not found.</div>
}
else
{
    <div class="news-details glass-card mx-auto">


        <h2 class="details-title">@Model.News.Title</h2>

        <div class="details-meta mb-3">
            <span class="category-pill">
                <td>@EHS_Benjamin_Pasic.Pages.News.SavedNewsModel.FormatCategory(Model.News.Category)
            </span>

            <span class="published-date">
                @Model.News.PublishedAt.ToString("yyyy-MM-dd HH:mm")
            </span>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.News.ImageUrl))
        {
            <img src="@Model.News.ImageUrl"
                 alt="@Model.News.Title"
                 class="details-image mb-3" />
        }

        <p class="details-description">@Model.News.Description</p>

        <a href="@Model.News.Url"
           target="_blank"
           class="btn btn-purple mt-3">
            Read full article
        </a>

    </div>
}
