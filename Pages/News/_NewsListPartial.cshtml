@model List<EHS_Benjamin_Pasic.Models.NewsDto>

@if (Model == null || !Model.Any())
{
    <p>No news available.</p>
}
else
{
    foreach (var item in Model)
    {
        <div class="news-card-list">

            <div class="d-flex justify-content-between">
                <h3 style="font-size:20px; color:#222;">@item.Title</h3>

                <button class="save-btn"
                        title="Save"
                        data-article='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(item))'>
                    ★
                </button>
            </div>

            <img src="@(string.IsNullOrWhiteSpace(item.ImageUrl)
                ? "/images/default-news.jpeg"
                : item.ImageUrl)"
                alt="@item.Title"
                onerror="this.onerror=null; this.src='/images/default-news.jpeg';"
                style="width:100%; max-width:300px; border-radius:8px; margin:12px 0;" />

            <p style="color:#444;">@item.Description</p>

            <a href="@item.SourceUrl"
               style="text-decoration:none; color:#0066cc;">
                Read more →
            </a>

        </div>
    }
}
