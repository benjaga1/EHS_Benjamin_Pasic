@model List<EHS_Benjamin_Pasic.Models.NewsDto>

@if (Model == null || !Model.Any())
{
    <p>No news available.</p>
}
else
{
    foreach (var item in Model)
    {
        <div class="news-item" style="margin-bottom:25px; padding:10px; border:1px solid #ddd; border-radius:8px;">
            <h3>@item.Title</h3>

            <img src="@(string.IsNullOrWhiteSpace(item.ImageUrl)
                              ? "/images/default-news.jpeg"
                              : item.ImageUrl)"
                 alt="@item.Title"
                 onerror="this.onerror=null; this.src='/images/default-news.jpeg';"
                 style="width:250px; height:auto; border-radius:6px; margin:10px 0;" />

            <p>@item.Description</p>

            <a href="/News/Details/@item.ArticleId">Read more</a>

            <br />

            <button class="btn btn-sm btn-primary save-btn"
                    style="margin-top:10px;"
                    data-article='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(item))'>
                Save
            </button>
        </div>
    }
}
