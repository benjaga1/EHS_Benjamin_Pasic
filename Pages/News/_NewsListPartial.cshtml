@model List<EHS_Benjamin_Pasic.Models.NewsDto>

@if (Model == null || !Model.Any())
{
    <p>No news available.</p>
}
else
{
    foreach (var item in Model)
    {
        <div class="news-item" style="margin-bottom:25px; padding:10px; border:1px solid #ddd; border-radius:8px;">
            <h3>@item.Title</h3>

            @if (!string.IsNullOrWhiteSpace(item.ImageUrl))
            {
                <img src="@item.ImageUrl" alt="@item.Title"
                     style="width:250px; height:auto; border-radius:6px; margin:10px 0;" />
            }

            <p>@item.Description</p>

            <a href="@item.Link" target="_blank">Read more</a>
        </div>
    }
}
